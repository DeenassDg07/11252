<Window x:Class="_1125.View.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1125.View"
        mc:Ignorable="d"
        Title="OrderWindow" Height="120" Width="300">
    <Border BorderBrush="#2027BC" BorderThickness="10">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Ваш заказ приедет:" Foreground="#2027BC" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right" Width="138"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Height="25" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button BorderThickness="0" Content="отмена" Grid.Row="1" Grid.Column="0" Width="100" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FF2027BC" Foreground="White" />
        <Button BorderThickness="0" Content="ок" Grid.Row="2" Grid.Column="2" Width="100" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center"  Background="#FF2027BC" Foreground="White" />
    </Grid>
        </Border>
</Window>
